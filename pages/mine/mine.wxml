<view class="mine">
  <view class="user_infos">
      <view class="first">
        <view class="avart">
          <image src="{{avartUrl}}"></image>
        </view>
        <view class="infos">
          <view class="name" wx:if="{{isLogin}}">
            <text>{{name}}</text>
            <image src="../../assets/imgs/refresh1.png" class="refresh"></image>
            <image src="../../assets/imgs/icon/icon_common.png" class="common"></image>
          </view>
          <view class="vips" wx:if="{{isLogin}}">
            <image mode="aspectFit" src="https://foreveryoungcity-1253855688.cos.ap-beijing.myqcloud.com/2019-08/9ed0447fcc28e97a2e39391d18d67038.png"></image>
