      <view class="order_item">
        <image src="../../assets/imgs/3333-33-33.png"></image>
        <text>待发货</text>
      </view>
      <view class="order_item">
        <image src="../../assets/imgs/3434-34.png"></image>
        <text>待收货</text>
      </view>
      <view class="order_item">
        <image src="../../assets/imgs/365656-35.png"></image>
