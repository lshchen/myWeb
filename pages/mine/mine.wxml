  <view class="orders">
    <view class="order">
      <text class="my_order">我的会员等级</text>
      <text class="all_order">查看更多等级权限</text>
    </view>
    <view class="levels">
      <image src="../../assets/imgs/icon/icon_class.png"></image>
      <text class="card_type">普卡</text>
      <view class="progress">
        <view class="desc">成长值5999/10000</view>
        <view class="line"></view>
        <image src="../../assets/imgs/icon/jingdu_50.png"></image>
      </view>
      <text>银卡</text>
    </view>
  </view>
  <view class="orders">
    <view class="order">
      <text class="my_order">我的社区会员</text>
