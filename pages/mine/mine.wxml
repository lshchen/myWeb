          <image src="../../assets/imgs/logo.png"></image>
        </view>
        <view class="user_num">
          已有3名成员
        </view>
      </view>
      <view class="counts">
        <text>5999</text>
        <text>共享成长值</text>
        <text>9000</text>
        <text>合计积分</text>
      </view>
    </view>
    <view class="user_add">
      <image src="../../assets/imgs/icon/icon-addfly.png"></image>
      <view>邀请好友组成家庭</view>
    </view>
  </view>
  <view class="lists">
    <view class="list_item info">
      我的消息
