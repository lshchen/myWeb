.content{
  padding: 0 20rpx;
}
/*轮播图*/
.content .swiper{
  width: 100%;
  height: 400rpx;
}
.content .swiper image{
  height: 100%;
  width: 100%;
}
.content .list{
  display:flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}
.content .list{
  display:flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  padding: 10rpx 0;
}
.content .list image{
  width: 120rpx;
  height: 124rpx;
}
.content .activity{
  margin: 30rpx 0;
  display:flex;
  align-items: center;
}
.content .activity .line{
  width:6rpx;
  height:40rpx;
  background:rgba(80,218,210,1);
}
.content .activity .title{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(35,24,21,1);
  margin-left: 13rpx;
}
.content .info{
  margin-bottom: 30rpx;
}
.content .info image{
  width: 100%;
  height: 350rpx;
}
.content .info .date{
  display:flex;
  justify-content: space-between;
  font-size:24rpx;
  font-weight:400;
  color:rgba(143,143,143,1);
  line-height:37rpx;
  margin-top: 10rpx;
  margin-bottom: 18rpx;
}
.content .info .date .vitality{
  font-size:30rpx;
  font-weight:500;
  color:rgba(0,0,0,1)
}
.content .info .desc{
  font-size:24rpx;
  font-weight:500;
  color:rgba(143,143,143,1);
  line-height:37rpx;
}
.more{
  width: 100%;
  text-align:center;
  margin:10rpx 0;
  opacity: 0.3;
}
