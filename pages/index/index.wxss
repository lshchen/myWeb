/**index.wxss**/
@import '../../templates/title/title.wxss';

.content {
  background: #fff;
  overflow-x:hidden;
}

.more_data {
  text-align: center;
  margin-top: 10rpx;
}

.controls {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
}

.controls-img {
  position: relative;
}

.top-l {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
}

.content .img {
  width: 500rpx;
  height: 580rpx;
  border-radius: 20rpx;
}
