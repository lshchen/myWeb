/* components/acting_staff/action_staff.wxss */
/* 演职人员 */
.actor-section {
    width: 686rpx;
    height: 293rpx;
    margin: 0 auto;
    background: rgba(255,255,255,1);
    border-radius: 20rpx;
    /* overflow: hidden; */
}

.actor-section-title {
    display: block;
    height: 32rpx;
    line-height: 32rpx;
    color: #000;
    font-size: 28rpx;
    font-weight: 600;
    padding: 28rpx 0 0 30rpx;
}

.scr-view {
    height: 190rpx;
    margin: 20rpx auto;
    width:626rpx;
}

.list-item {
    height: 190rpx;
    display: flex;
}

.scr-view-item {
    width: 120rpx;
    height: 190rpx;
    margin-right: 20rpx;
}

.scr-view-item view image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.name {
    width: 120rpx;
    height: 24rpx;
    line-height: 24rpx;
    font-size: 24rpx;
    color: #000;
    font-weight: 500;
    text-align: center;
    padding-top: 5rpx;
}

.position-n {
    width: 120;
    height: 18rpx;
    line-height: 18rpx;
    font-size: 20rpx;
    color: #999;
    font-weight: 500;
    text-align: center;
    padding-top: 9rpx; 
}
/*隐藏滚动条*/
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}